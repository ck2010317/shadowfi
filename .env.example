# Server Configuration
PORT=3001
NODE_ENV=development

# Anoncoin API Configuration
ANONCOIN_API_URL=https://api.anoncoin.xyz
ANONCOIN_API_KEY=your_api_key_here

# Database
MONGODB_URI=mongodb://localhost:27017/shadowfi

# JWT Secret for session management
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Encryption Keys (for private intent encryption)
ENCRYPTION_KEY=your_32_byte_encryption_key_here
IV_KEY=your_16_byte_iv_key_here

# Twitter OAuth (for X identity verification)
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_CALLBACK_URL=http://localhost:3001/auth/twitter/callback

# Dark Pool Configuration
DARK_POOL_MATCHING_INTERVAL_MS=5000
MIN_ORDER_SIZE=0.01
MAX_ORDER_SIZE=1000000

# Privacy Settings
ENABLE_TOR_SUPPORT=false
ENABLE_MIXNET=true
